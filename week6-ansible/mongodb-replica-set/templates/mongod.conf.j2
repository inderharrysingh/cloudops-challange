storage:
  dbPath: /var/lib/mongodb

systemLog:
  destination: file
  logAppend: true
  path: /var/log/mongodb/mongod.log


net:
  port: 27017
  bindIp: {{ hostvars[inventory_hostname].mongo_name }}



processManagement:
  fork: true 
  timeZoneInfo: /usr/share/zoneinfo



replication:
   replSetName: "rs01"

